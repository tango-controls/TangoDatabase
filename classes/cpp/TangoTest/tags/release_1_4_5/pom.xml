    <scm>
        <connection>${scm.connection.cvs.tango-cs}:tango/cppserver/TangoTest</connection>
        <developerConnection>${scm.developerConnection.cvs.tango-cs}:tango/cppserver/TangoTest</developerConnection>
        <url>${scm.url.cvs.tango-cs}/tango/cppserver/TangoTest</url>
    </scm>

    <developers>
        <developer>
            <id>leclercq</id>
            <name>leclercq</name>
            <url>http://controle/</url>
            <organization>Synchrotron Soleil</organization>
            <organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
            <roles>
                <role>manager</role>
            </roles>
            <timezone>1</timezone>
        </developer>
    </developers>
</project>
